@model HomeModel
<!-- News Section -->
<section class="news-section container">
    <div class="auto-container">
        <!-- Sec Title -->
        <div class="sec-title text-center">
            <span class="title">Latest News</span>
            <h2 class="text-reveal-anim">Recent Articles and News</h2>
            <span class="divider"></span>
        </div>

       

        <div class="row">
            @foreach (var item in Model.eventList)
            {
                <!-- News Block -->
                <div class="news-block col-lg-3 col-md-4 col-sm-12 wow fadeInUp">
                    <div class="inner-box" style="width:300px">
                        <div class="image-box" style="height:200px; ">
                            <figure class="image"><a href="blog-post-image.html"><img src="~/Files/events/@item.ImgPath" alt="" onerror="this.onerror=null;this.src='Theme/images/ImageNotFound.png';" style="height: fit-content; width: fit-content"></a></figure>
                            <a href="#" class="date">@(item.Date?.ToString("yyyy-MM-dd") ?? "No date available")</a>
                        </div>
                        <div class="lower-content">
                            <h4><a href="blog-post-image.html">@item.HeaderEn</a></h4>
                        </div>
                    </div>
                </div>
            }
            


        </div>
    </div>
</section>
<!--End News Section -->